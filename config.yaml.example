bot:
  # Botの基本設定
  character_prompt_file: "katariina_prompt.md"
  
posting:
  # 夜間投稿停止設定
  night_mode:
    enabled: true
    start_hour: 23  # 23:00
    end_hour: 5     # 5:00
  
  # ランダム投稿設定
  random_post:
    enabled: true
    interval_minutes: 60  # 1時間に1回
  
  # 定時投稿設定
  scheduled_posts:
    - time: "07:30"
      messages:
        - "おはよう～♪ 今日もいい天気かな？"
        - "おはよー！ 朝ごはん食べた？"
        - "Huomenta（おはよう）～♪ 今日も頑張ろうね！"
    
    - time: "12:00"
      messages:
        - "お昨だよ！ お昨ごはん何食べる？"
        - "ランチタイム～♪ 今日のお昨は何かな？"
        - "お昨の時間だね！ 甲府は暑いから冷たいもの食べたいな〜"
    
    - time: "18:30"
      messages:
        - "お疲れ様！ 今日も1日頑張ったね♪"
        - "夕方だね～ お疲れ様でした！"
        - "今日も終わりかな？ お疲れー♪ Kiitos（ありがとう）！"

follow:
  # フォロー管理設定
  auto_follow_back: true
  auto_unfollow_back: true
  check_interval_minutes: 3  # フォロー状態チェック間隔 (WebSocket実装までの暫定)

reply:
  # リプライ応答設定
  enabled: true
  restriction: "mutual"  # mutual(相互フォロー) / follower(フォロワー) / all(全員)
  rate_limit:
    per_user_per_hour: 3  # 1ユーザーあたり1時間に何回まで
  ignore_night_mode: true  # 夜間も応答する
